{
  "compilerOptions": {
    "outDir": "./lib/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "declaration": true,
    "jsx": "react",
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["**/node_modules/**", "**/lib/**"]
}