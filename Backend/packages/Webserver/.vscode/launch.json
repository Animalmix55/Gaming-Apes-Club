    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "preLaunchTask": "build",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "sourceMaps": true,
            "program": "${workspaceFolder}/dist-server/bin/www.js",
            "outFiles": [
                "${workspaceFolder}/dist-server/**/*.js"
            ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug Update Models",
            "preLaunchTask": "build",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "sourceMaps": true,
            "program": "${workspaceFolder}/updateModels.js",
            "outFiles": [
                "${workspaceFolder}/dist-server/**/*.js"
            ]
        }
    ]
}